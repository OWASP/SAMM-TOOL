<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - OWASP SAMM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OWASP SAMM", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (ViewBag.isAdmin != null && ViewBag.isBUOwner != null)
                    {
                        if ((bool)ViewBag.isAdmin || (bool)ViewBag.isBUOwner)
                        {
                            <li>@Html.ActionLink("BU Summary", "BUSummary", "Assessments")</li>
                        }
                    }
                    <li>@Html.ActionLink("Assessments", "Index", "Assessments")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (ViewBag.isAdmin != null)
                    {
                        if ((bool)ViewBag.isAdmin)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Maintenance <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Users", "Index", "UserData")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Industry Targets", "Index", "IndustryTargets")</li>
                                </ul>
                            </li>
                        }
                    }

                </ul>
                @if (ViewBag.UserName != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="navbar-text">Hello, @ViewBag.UserName</li>
                    </ul>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
